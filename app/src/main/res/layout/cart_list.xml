<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEFD9"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/cartProductImg"
        android:layout_margin="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cartProductName"
            android:text="Product's Name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cartProductPrice"
            android:text="Product's Price"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#C97D01"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="140dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/min_qty_button"
                android:id="@+id/minQuantityButton"
                android:focusable="true"
                android:clickable="true"
                />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/square"/>

                <TextView
                    android:layout_width="33dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/quantityNum"
                    android:text="1"
                    android:textSize="16sp"
                    android:textColor="#994E20"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginVertical="2dp"/>

            </FrameLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/plusQuantityButton"
                android:src="@drawable/add_qty_button"
                android:focusable="true"
                android:clickable="true"
                />

            <ImageView
                android:layout_width="17dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/trashcan"
                android:id="@+id/DeleteBtn"
                android:focusable="true"
                android:clickable="true" />

        </LinearLayout>


    </LinearLayout>



</LinearLayout>