<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEFD9"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        app:srcCompat="@drawable/pawprints" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="171dp"
        app:srcCompat="@drawable/pawfectpurrchase" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtLoginEmail"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="Email..." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtLoginPassword"
                android:layout_width="292dp"
                android:layout_height="59dp"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:hint="Password..."
                android:inputType="textPassword" />

            <!-- Tombol Toggle Visibilitas Password -->
            <ImageView
                android:id="@+id/btnTogglePassword"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="30dp"
                android:contentDescription="Toggle Password Visibility"
                android:padding="10dp"
                android:src="@drawable/show" />
        </LinearLayout>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="226dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:text="Log in"
            android:backgroundTint="#C97D01"
            android:textColor="#FFEFD9"/>

        <LinearLayout
            android:layout_width="252dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="168dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:text="Don't have an account?"
                android:textAlignment="viewEnd"
                android:textSize="15dp"
                android:paddingRight="0dp"
                android:layout_marginRight="5dp"/>

            <ImageView
                android:id="@+id/btnRegisterFromLogin"
                android:layout_width="60dp"
                android:layout_height="51dp"
                android:backgroundTint="#C97D01"
                android:text="Register"
                android:textColor="#FFEFD9"
                app:srcCompat="@drawable/register_"
                android:paddingBottom="2dp" />
        </LinearLayout>
<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="20dp"-->
<!--            android:text="Don't have an account?"-->
<!--            android:layout_gravity="center"-->
<!--            android:textAlignment="center"-->
<!--            android:textSize="15dp"/>-->
<!--                    -->
<!--        <Button-->
<!--            android:id="@+id/btnRegisterFromLogin"-->
<!--            android:layout_width="226dp"-->
<!--            android:layout_height="61dp"-->
<!--            android:layout_gravity="center"-->
<!--            android:text="Register"-->
<!--            android:backgroundTint="#C97D01"-->
<!--            android:textColor="#FFEFD9"/>-->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/dog_and_cat_and_house"
            android:layout_marginTop="135dp"
            />

    </LinearLayout>
</LinearLayout>