<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFEFD9"
    android:maxWidth="100dp">

    <ImageView
        android:id="@+id/btnBackToHome"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="28dp"
        app:srcCompat="@drawable/back_button" />

    <ImageView
        android:layout_width="114dp"
        android:layout_height="126dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/user_profile" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to your profile,"
        android:textSize="22dp"
        android:fontFamily="sans-serif-black"
        android:layout_gravity="center" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="24dp"
        android:fontFamily="sans-serif-black"
        android:layout_gravity="center"
        android:id="@+id/emptyText"/>

    <TextView
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif"
        android:text="You've been a member of



        Pawfect Purrchase since:"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="December"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-black"
        android:textSize="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:text="2024"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-black"
        android:layout_marginTop="-20dp"/>

<!--    Logout sm graphics-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="78dp"
            android:layout_height="129dp"
            app:srcCompat="@drawable/pawprint_right_top" />
        <ImageView
            android:layout_width="258dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/logout_button"
            android:id="@+id/btnLogout"/>
        <ImageView
            android:layout_width="115dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/pawprint_left_top" />
    </LinearLayout>


    <ImageView
        android:layout_width="410dp"
        android:layout_height="237dp"
        android:layout_marginTop="129dp"
        android:layout_gravity="bottom"
        app:srcCompat="@drawable/dog_and_cat_and_house" />
</LinearLayout>